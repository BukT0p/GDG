<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dataart.vyakunin.gdg_wear" >

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeActivity_"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.gdg.send_alert" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.gdg.call" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.gdg.record_audio" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.gdg.record_video" />
            </intent-filter>
        </activity>
        <activity android:name=".SettingsActivity_"/>
        <service android:name=".ListenerServiceFromWear">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>
    </application>


</manifest>
